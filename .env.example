# Operation Mode (TESTNET or SPOT)
MODE=TESTNET

# Binance API - Real
API_KEY_BINANCE_REAL=
API_SECRET_BINANCE_REAL=

# Binance API - Testnet
API_KEY_BINANCE_TESTNET=your_testnet_api_key
API_SECRET_BINANCE_TESTNET=your_testnet_api_secret

# Telegram
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_ENABLED=true

# Trading Parameters
SYMBOL=BTCUSDT
DAILY_TARGET=0.0003
MAX_RISK_PER_TRADE=0.01
MAX_POSITION_SIZE=0.5
MIN_POSITION_SIZE_USDT=10.0

# Risk Management
STOP_LOSS_PERCENT=0.002
TAKE_PROFIT_PERCENT=0.003
MAX_DAILY_LOSS=0.001
MAX_CONSECUTIVE_LOSSES=3

# Strategy Parameters
PRIMARY_TIMEFRAME=15m
SECONDARY_TIMEFRAME=1h
MIN_CONFLUENCE_SCORE=70

# Indicator Parameters - EMA
EMA_FAST=9
EMA_SLOW=21
EMA_TREND=50

# Indicator Parameters - SMA
SMA_PERIOD=200

# Indicator Parameters - RSI
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Indicator Parameters - MACD
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Indicator Parameters - Stochastic
STOCH_K=14
STOCH_D=3
STOCH_SMOOTH=3

# Indicator Parameters - Bollinger Bands
BB_PERIOD=20
BB_STD=2.0

# Indicator Parameters - ATR
ATR_PERIOD=14

# Indicator Parameters - Volume
VOLUME_MA_PERIOD=20

# Filters
MIN_ATR_PERCENT=0.001
MAX_ATR_PERCENT=0.05
MIN_VOLUME_RATIO=0.5

# Safety Flags
ENABLE_TRADING=true
PAPER_TRADING=false
EMERGENCY_STOP=false
REQUIRE_CONFIRMATION=false

# System
LOG_LEVEL=INFO
REFRESH_INTERVAL=60
API_TIMEOUT=30
MAX_API_RETRIES=3

# Railway (automatically set by Railway)
PORT=8000
